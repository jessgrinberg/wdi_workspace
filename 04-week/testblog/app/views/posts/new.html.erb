<h1>New Post</h1>

<%= form_for @post do |p| %>
	<div>
		<%= p.label :name %>
		<%= p.text_field :name %>
	</div>

	<div>
		<%= p.label :title %>
		<%= p.text_field :title %>
	</div>

	<div>
		<%= p.label :content %>
		<%= p.text_field :content %>
	</div>

	<%= p.submit "Add a new post!" %>

<% end %>





<%= link_to 'Back', posts_path %>