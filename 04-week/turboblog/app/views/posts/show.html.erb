<p id="notice"><%= notice %></p>


<div class="row">
<div class="col-md-8">
<p>
  <strong>Name:</strong>
  <%= @post.name %>
</p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

</div>


<div class="col-md-4">

<h2>Comments</h2>
<% @post.comments.each do |comment| %>
Commenter: <%= comment.commenter %>

Comment: <%= comment.body %> <%= comment.created_at %>
</div>
<% end %> 

</div>





